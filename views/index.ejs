<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/estilo.css">
        <title>Pokedéx</title>
    </head>
    <body>
        <article id="tudoo">
            <section class="container">
                <h1> 
                    <a id="titulo" href="/"></a>Pokedéx</a>
                </h1>
            
            </section>
            <section class="botao">
                <a id="detail" href="/cadastro">Cadastro</a>
                <a id="home" href="/">Home</a>
            </section>
        

            <% if(message != ""){ %>
            <section id="message">
                <p class="sucesso">Pokemon cadastrado com sucesso!</p>      <span id="close">&times;</span>
            </section>
            <% } %>
        
            <div id="poke">
                <% listaprincipal.forEach(item => { %>
                <img class="imagee" src="<%= item.imagem %>" width="250" height="250" alt="imagem1" >
                <p class="numeroo">Número: <%= item.numero %></p> 
                <p class="nomee">Nome: <%= item.nome %> <br> </p> 
                <p class="tipoo">Tipo: <%= item.tipo %> <br> </p>
                <a class="tipooo" href="/detalhes">Ver Detalhes</a>
                <% }) %> 
            </div>
        </article>
        

        <script src="/js/script.js"></script>
    </body>
</html>